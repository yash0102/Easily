<main class="fw-light">
    <div class="d-flex">
        <div id="header-section">
            <h1 id="main-heading" class="fw-normal mt-5">A comprehesive platform for <br> reliable</h1>
            <p id="word-animation" class="fw-normal text-light" >job opportunities and internships.</p>
            <h4 class="fw-light text-light">Get Discovered. Get Hired.</h4>
            <div class="mt-3">
            <button type="button" class="btn fw-light text-light jobBtn"><a href="/jobs">I'm A Job Seeker</a></button>
            <button type="button" data-bs-toggle="modal" data-bs-target="#registerModal" class="btn fw-light text-light ms-2 jobBtn">I'm A Recruiter</button>
            </div>
        </div>
        <div class="ms-5">
            <img src="/images/banner.png" alt="banner"/>
        </div>
    </div>
</main>

<!-- Register Modal -->
<div class="modal fade mt-5" id="registerModal" tabindex="-1" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fw-light" id="applyModalLabel">Experience easily!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body fw-normal fs-5">
                <form action="/register" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control fw-light" id="name" name="name" placeholder="Enter name" >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control fw-light" id="email" name="email" step="0.01" placeholder="Enter email"  >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Password</label>
                        <input type="password" class="form-control fw-light" id="password" name="password" step="0.01" placeholder="Enter your password"  >
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn text-light fs-5 fw-light" style="background-color: #ff2c90;">Register</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer fw-light fs-6 d-flex align-items-centre justify-content-between">
                <div>
                    <span>Already registered ?</span>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#loginModal" class="btn btn-outline-success">login</button>
                </div>
                <div class="right" style="gap: 10px;">
                    <a><img src="https://cdn-icons-png.flaticon.com/128/2504/2504739.png" width="20"> </a>&nbsp;&nbsp;
                    <a><img src="https://cdn-icons-png.flaticon.com/128/733/733609.png" width="20"> </a>&nbsp;&nbsp;
                    <a><img src="https://cdn-icons-png.flaticon.com/128/3536/3536505.png" width="20"> </a>&nbsp;&nbsp;
                    <a><img src="https://cdn-icons-png.flaticon.com/128/2504/2504903.png" width="20"> </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- loginModal -->
<div class="modal fade mt-5" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fw-light text-success fs-5" id="loginModalLabel">Experience easily!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body fw-light">
                <form action="/" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control fw-light" id="email" name="email" step="0.01" placeholder="Enter email"  >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Password</label>
                        <input type="password" class="form-control fw-light" id="password" name="password" step="0.01" placeholder="Enter your password"  >
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn text-white fs-6 fw-light" style="background-color: #ff2c90;">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>